unit UlgaDlaKlasySredniej;

interface

uses
  Narzedzia;

const
  PRÓG_DLA_26 = 85528;
  ULGA_PRÓG_1 = 5701;
  ULGA_PRÓG_2 = 8549;
  ULGA_PRÓG_3 = 11141;

function liczUlgê(brutto: Double): Double;

implementation

function liczUlgê(brutto: Double): Double;
begin
  if (brutto >= ULGA_PRÓG_1) and (brutto < ULGA_PRÓG_2) then
    result := redDoSetnych((brutto * 0.0668 - 380.5) / 0.17)
  else if (brutto >= ULGA_PRÓG_2) and (brutto < ULGA_PRÓG_3) then
    result := redDoSetnych((brutto * -0.0735 + 819.08) / 0.17)
  else
    result := 0;
end;

end.
